{
  "name": "vite-express-ssr-ts",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch server --watch server.ts --exec tsx server.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:client": "vite build --outDir dist/app/client",
    "build:server": "tsc -p tsconfig.server.json && vite build --ssr src/entry-server.tsx --outDir dist/entry",
    "clean": "rimraf dist",
    "serve": "cross-env NODE_ENV=production node ./dist/app/server"
  },
  "dependencies": {
    "@types/serve-static": "^1.15.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.20",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "compression": "^1.7.4",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8",
    "npm": ">=9"
  }
}
